<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="Loggix44Window" parent="AdwApplicationWindow">
    <property name="default-width">600</property>
    <property name="default-height">300</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar" id="header_bar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>

            <!--top nav bar-->
            <object class="GtkBox">
              <property name="hexpand">true</property>
              <property name="orientation">horizontal</property>
                <!--entry 1-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Time (UTC)</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Time...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 2-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Date</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Date...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 3-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Freq (MHz)</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Frequency...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 4-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Callsign</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Call...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 5-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Power (dBW)</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Power...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 6-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">Mode</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">Mode...</property>
                    </object>
                  </child>
                </object>
              </child>
               <!--entry 7-->
              <child>
                <object class="GtkBox">
                  <property name="hexpand">true</property>
                  <property name="margin-end">5</property>
                  <property name="orientation">vertical</property>
                  <child>
                    <object class="GtkLabel">
                      <property name="label">RST report</property>
                    </object>
                  </child>
                  <child>
                    <object class="GtkEntry">
                      <property name="placeholder-text">RST...</property>
                    </object>
                  </child>
                </object>
              </child>
            </object>


        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About LoggiX-44</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
